<%-include("partials/header")-%>
<div class="page-name p-3 text-center">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="">CONTACT US</h1>
  </div>
</div>
</div>

<div class="contact-section">
  <div class="contact-information">
    <h6>INFORMATION</h6>
    <h1>CONTACT DETAILS</h1>
    <div class="row">
      <div class="col-lg-1 ">
        <i class="fa-3x fas fa-envelope-open-text"></i>
      </div>
      <div class="col-lg-3 border-right">
        <h6>EMAIL ADDRESS</h6>
        <p>ulticodex@gmail.com</p>
      </div>
    </div>
  </div>

  <div class="contact-form border-top mt-5 pt-5">
    <h6>FORM</h6>
    <h1>GET IN TOUCH</h1>
    <p>Want to get in touch? We'd love to hear from you. Fill this form out and we will get back to you ASAP</p>
  </div>

  <form action="/contact" method="post">
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="inputEmail">Email</label>
      <input name="email" type="email" class="rounded-0 form-control" id="inputEmail" placeholder="Email...">
    </div>
    <div class="form-group col-md-3">
      <label for="inputName">Name</label>
      <input name="name" type="text" class="rounded-0 form-control" id="inputName" placeholder="Name...">
    </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="inputDescription">Description</label>
    <textarea name="content" class="rounded-0 form-control" id="inputDescription" rows="5" placeholder="Description..."></textarea>
  </div>
  </div>


  <button type="submit" class="rounded-0 form-button btn">Send Message</button>
</form>

</div>

<%-include("partials/footer")-%>
